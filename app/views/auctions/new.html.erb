<h1>Sign up</h1>

<% form_for @auction, :html => { :multipart => true } do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_field :description %>
	</div>
	<div class="field">
		<%= f.label :current_offer, "Starting offer" %><br />
		<%= f.text_field :current_offer %>
	</div>
	<div class="field">
		<%= f.label :photo, "Upload image" %>
		<%= f.file_field :photo %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>